<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_oneline_item_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recycler_item_image"
            android:layout_width="@dimen/recycler_item_img_size"
            android:layout_height="@dimen/recycler_item_img_size"
            android:layout_marginLeft="@dimen/recycler_item_margin_16dp"
            android:layout_marginTop="@dimen/recycler_item_margin_8dp"
            android:layout_marginRight="@dimen/recycler_item_margin_16dp"
            android:layout_marginBottom="@dimen/recycler_item_margin_8dp"
            android:background="@drawable/item_round_background"
            android:gravity="center"
            android:text="T"
            android:textAlignment="center"
            android:textSize="@dimen/recycler_item_img_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recycler_item_text_first"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recycler_item_first_text_height"
                android:gravity="bottom"
                android:text="First Text"
                android:textSize="@dimen/recycler_item_first_text" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/recycler_item_margin_16dp"
            android:layout_marginTop="@dimen/recycler_item_margin_8dp"
            android:layout_marginRight="@dimen/recycler_item_margin_16dp"
            android:layout_marginBottom="@dimen/recycler_item_margin_8dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recycler_item_text_groupe_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="id N"
                android:textColor="@color/recyclerSecondText"
                android:textSize="@dimen/recycler_item_meta_text" />

            <TextView
                android:id="@+id/recycler_item_text_host_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hosts N"
                android:textColor="@color/recyclerSecondText"
                android:textSize="@dimen/recycler_item_meta_text" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/recycler_view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividerLightGray" />

</LinearLayout>